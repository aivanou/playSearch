/*http://localhost:9200/linky/ (PUT) */
/*For production system all types should be separated on servers
* One type for one server
* */
/*this is schema for local envirenmont*/
{
    "settings":{
                "analysis":{
                   "analyzer": {
                       "default" : {
                           "type" : "thai"
                    },
                       "index_analyzer": {
                           "tokenizer": "standard",
                           "filter": ["standard", "lowercase", "stop", "asciifolding", "porter_stem"]
                       },
                       "search_analyzer": {
                           "tokenizer": "standard",
                           "filter": ["standard", "lowercase", "stop", "asciifolding", "porter_stem"]
                       }
                   }
                }
    },
    "mappings":{
        "docs":{
            "properties":{
                "title":{
                   "type":"string"
                },
                "content":{
                   "type":"string"
                },
                "url":{
                    "type":"string"
                },
                "indexed":{
                   "type":"date"
                }
            }
        },
        "video":{
            "properties":{
                "title":{
                   "type":"string"
                },
                "content":{
                   "type":"string"
                },
                "url":{
                   "type":"string"
                },
                "indexed":{
                    "type":"date"
                },
                "language":{
                    "type":"string"
                },
                "rating":{
                    "type":"double"
                },
                "maxRating":{
                    "type":"double"
                }
            }
        },
        "picture" :{
            "properties":{
                "title":{
                   "type":"string"
                },
                "url":{
                    "type":"string"
                },
                "indexed":{
                    "type":"date"
                },
                "height":{
                    "type":"integer"
                },
                "width":{
                    "type":"integer"
                },
                "preview_url":{
                    "type":"string"
                },
                "format":{
                    "type":"string"
                }
            }
        },
        "news":{
            "properties":{
                "title":{
                    "type":"string"
                },
                "content":{
                    "type":"string"
                },
                "url":{
                    "type":"string"
                },
                "indexed":{
                    "type":"date"
                },
                "publicDate":{
                    "type":"date"
                },
                "author":{
                    "type":"string"
                },
                "language":{
                    "type":"string"
                }
            }
        },
        "address":{
            "properties":{
                "indexed":{
                    "type":"date"
                },
                "lon":{
                   "type":"double"
                },
                "addr_city":{
                   "type":"string"
                },
                "addr_street":{
                   "type":"string"
                },
                "fax":{
                   "type":"string"
                },
                "website":{
                   "type":"string"
                },
                "E-mail":{
                   "type":"string"
                },
                "tel":{
                   "type":"string"
                },
                "addr_postcode":{
                   "type":"string"
                },
                "addr_province":{
                   "type":"string"
                },
                "country_code":{
                   "type":"string"
                },
                "addr_other":{
                   "type":"string"
                },
                "addr_country":{
                   "type":"string"
                },
                "description":{
                   "type":"string"
                },
                "name":{
                   "type":"string"
                },
                "addr_name":{
                   "type":"string"
                },
                "addr_district":{
                   "type":"string"
                },
                "lat":{
                   "type":"double"
                }
            }
        },
        "catalog":{
            "properties":{
                "id":{
                   "type":"string"
                },
                "title":{
                   "type":"string"
                },
                "content":{
                   "type":"string"
                },
                "url":{
                   "type":"string"
                },
                "indexed":{
                    "type":"date"
                }
            }
        }
    }
}